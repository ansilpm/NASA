  <script>
    // Simple front-end logic for the prototype
    (function(){
      const btnCupola = document.getElementById('btn-cupola');
      const btnNbl = document.getElementById('btn-nbl');
      const slideshow = document.getElementById('slideshow');
      const slides = Array.from(slideshow.querySelectorAll('.slide'));
      const nblSim = document.getElementById('nbl-sim');
      const modeText = document.getElementById('mode-text');
      const startBtn = document.getElementById('start-btn');
      const astronaut = document.getElementById('astronaut');
      const buoyancy = document.getElementById('buoyancy');

      let activeIndex = 0;
      let slideInterval = null;
      let currentMode = 'cupola'; // cupola / nbl

      function showSlide(i){
        slides.forEach((s, idx) => {
          if(idx === i){
            s.classList.remove('fade-out');
            s.style.opacity = 1;
            s.style.zIndex = 2;
          } else {
            s.classList.add('fade-out');
            s.style.opacity = 0;
            s.style.zIndex = 1;
          }
        });
      }

      function startSlideshow(){
        showSlide(activeIndex);
        slideInterval = setInterval(() => {
          activeIndex = (activeIndex + 1) % slides.length;
          showSlide(activeIndex);
        }, 3800);
      }
      function stopSlideshow(){
        if(slideInterval){ clearInterval(slideInterval); slideInterval = null; }
      }

      // Mode toggling
      function setMode(mode){
        currentMode = mode;
        if(mode === 'cupola'){
          btnCupola.classList.add('active');
          btnNbl.classList.remove('active');
          slideshow.style.display = 'block';
          nblSim.style.display = 'none';
          modeText.innerText = 'Cupola â€” Explore Earth imagery and learn how astronaut observations benefit life on Earth.';
          startSlideshow();
        } else {
          btnCupola.classList.remove('active');
          btnNbl.classList.add('active');
          slideshow.style.display = 'none';
          nblSim.style.display = 'flex';
          modeText.innerText = 'NBL â€” Simulate neutral buoyancy training and understand astronaut preparation for spacewalks.';
          stopSlideshow();
        }
      }

      // attach events
      btnCupola.addEventListener('click', () => setMode('cupola'));
      btnNbl.addEventListener('click', () => setMode('nbl'));

      startBtn.addEventListener('click', () => {
        // smooth scroll to main view (for presentation effect)
        document.getElementById('main-view').scrollIntoView({ behavior: 'smooth' });
      });

      // NBL buoyancy effect logic (simple)
      function updateAstronaut(){
        // buoyancy value from -100 (sink) to +100 (float)
        const v = parseInt(buoyancy.value, 10);
        // map to top position in percent (higher = more floating up)
        // neutral ~ 0 => center ~ top: 40%
        const topPct = 50 - (v * 0.12); // adjust sensitivity (tweakable)
        astronaut.style.top = Math.max(6, Math.min(86, topPct)) + '%';

        // tilt astronaut based on movement
        const tilt = v * 0.06; // degrees
        astronaut.style.transform = `translateY(0) rotate(${tilt}deg)`;
      }
      buoyancy.addEventListener('input', updateAstronaut);

      // Demo buttons (placeholder behavior)
      document.getElementById('demo-next').addEventListener('click', () => {
        alert('Demo script: 1) Explain Cupola images and Earth benefits. 2) Toggle to NBL and show buoyancy slider. 3) Conclude with real-world impacts. (Use your saved speaker notes.)');
      });
      document.getElementById('download-guide').addEventListener('click', () => {
        alert('Download Guide: placeholder. In full version we will generate a PDF guide with URLs and speaker notes.');
      });

      // Init
      setMode('cupola');
      updateAstronaut();

      // Accessibility tip: allow keyboard toggle
      window.addEventListener('keydown', (e) => {
        if(e.key === '1') setMode('cupola');
        if(e.key === '2') setMode('nbl');
      });

      // Developer notes:
      // - Replace inline background-image urls in .slide elements with NASA image URLs.
      // - For real captions, set the .caption text content to NASA image metadata and credit.
      // - To integrate NASA APIs:
      //    1) Use fetch() to call NASA Image and Video Library or EPIC/EONET APIs.
      //    2) Populate slides dynamically: slidesContainer.appendChild(newSlideEl)
      // - Example API integration point: after DOM load, fetch NASA image list and create slides.
    })();
  </script>
